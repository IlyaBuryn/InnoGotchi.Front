@using InnoGotchi.Http.Models
@model PetModel

<div class="row">
    <div class="col-sm-3">
        <p class="mb-0">Set pet body:</p>
    </div>
    <div class="col-sm-9">

        <div class="scrollmenu">
            @foreach (var item in ViewBag.Bodies as List<BodyPartModel>)
            {
                <a onclick="setImageView('@item.Image','Body','@item.Id')">
                    <img src="@Url.Content(item.Image)" width="60" height="60" class="img-scroll" />
                </a>
            }
        </div>
    </div>
</div>
<hr />

