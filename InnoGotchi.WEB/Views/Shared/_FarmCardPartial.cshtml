@using InnoGotchi.Components.DtoModels
@using InnoGotchi.Http.Models
@model FarmDto

<div class="card mb-3" style="height: 450px; width: 350px; margin: 1rem">
    <div class="card-header text-center">
        <span class="fw-bold">Name:&emsp;</span>@Model.Name
    </div>

    <div class="card-body text-center">
        <div class="d-flex justify-content-center">
            <img src="~/images/barn.png" width="200" />
        </div>
    </div>

    <div class="card-footer text-center">
        <div class="d-flex justify-content-center mb-2">

            <form asp-action="ReadOnlyDetails" asp-route-id="@Model.Id" asp-controller="Farm" style="margin: 5px">
                <button type="submit" class="btn-nerby btn btn-primary">Go to farm</button>
            </form>

        </div>
    </div>

</div>