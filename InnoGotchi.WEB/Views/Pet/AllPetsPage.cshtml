@using InnoGotchi.Components.DtoModels
@using InnoGotchi.Components.Enums
@using InnoGotchi.Http.Models
@using InnoGotchi.WEB.Utility
@inject IHttpContextAccessor httpContextAccessor
@model PageIndexViewModel<PetDto>
@{
    var currentFilter = httpContextAccessor.HttpContext.Session.Get<SortFilter>("CurrentFilter");
    var currentFilterString = currentFilter.ToString();
    ViewBag.Title = "All innogotchi";

}

<div class="row">
    <div class="col">
        <div class="card mb-4">
            <div class="card-body">

                <div class="d-flex align-items-center">
                    <h4 class="mx-1">Filters</h4>

                    <form asp-action="AllPetsPage" asp-route-page="1" asp-route-sortType="@SortFilter.ByHappinessDays">
                        <button type="submit" id="btnByHappinessDays" class="btn btn-primary btn-rounded mx-1">By happiness days</button>
                    </form>

                    <form asp-action="AllPetsPage" asp-route-page="1" asp-route-sortType="@SortFilter.ByAge">
                        <button type="submit" id="btnByAge" class="btn btn-primary btn-rounded mx-1">By age</button>
                    </form>

                    <form asp-action="AllPetsPage" asp-route-page="1" asp-route-sortType="@SortFilter.ByHungerLevel">
                        <button type="submit" id="btnByHungerLevel" class="btn btn-primary btn-rounded mx-1">By hungry level</button>
                    </form>

                    <form asp-action="AllPetsPage" asp-route-page="1" asp-route-sortType="@SortFilter.ByThirstyLevel">
                        <button type="submit" id="btnByThirstyLevel" class="btn btn-primary btn-rounded mx-1">By thirsty level</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-body">

               <h4>My innogothies</h4>

                <div class="row d-flex justify-content-start ">
                    @foreach (var item in Model.Items)
                    {
                        <div class="card mb-3" style="height: 450px; width: 350px; margin: 1rem">

                            @await Html.PartialAsync("_PetDetailsCardHeaderPartial", item)
                            @await Html.PartialAsync("_PetDetailsCardFooterPartial", new PetViewModel(item, true))

                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center">
            @if (Model.PageViewModel.HasPreviousPage)
            {
                <a asp-action="AllPetsPage"
               asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
               asp-route-sortType="@currentFilter"
               class="btn btn-outline-dark m-1">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Back
                </a>
            }
            @if (Model.PageViewModel.HasNextPage)
            {
                <a asp-action="AllPetsPage"
               asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
               asp-route-sortType="@currentFilter"
               class="btn btn-outline-dark m-1">
                    Forward
                    <i class="glyphicon glyphicon-chevron-right"></i>
                </a>
            }
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $("#btn" + '@currentFilterString').removeClass("btn-primary").addClass("btn-secondary").prop("disabled", true);
</script>