@using InnoGotchi.WEB.Utility
@inject IHttpContextAccessor HttpContextAccessor
@model UserUpdateModel
@{
    var user = HttpContextAccessor.HttpContext.Session.Get<SessionUser>("SessionUser");
    Model.UserId = user.Id;
    ViewBag.Title = "Settings";
}

<section>
    <div class="container py-5">
        <div class="col-md-6 offset-md-3">
            <div class="card mb-4"> 
                <div class="card-body text-center">
                    <div class="row justify-content-end">
                        
                        <div class="col-4 d-flex flex-row-reverse">
                            <form asp-action="Index" asp-controller="Home">
                                <input type="hidden" class="form-control" />
                                <button type="submit" class="btn-close" aria-label="Close"></button>
                            </form>
                        </div>
                    </div>

                    <a asp-action="ChangeNameInfo" asp-controller="Account">
                        <img src="@Url.Content(Model.Image)" alt="img" class="rounded-circle img-fluid avatar-img" style="width: 150px; height: 150px; margin-bottom: 50px">
                    </a>

                    <form asp-action="UpdateUserInfo" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger">
                        </div>

                        <input asp-for="UserId" value="@Model.UserId" hidden="hidden" class="form-label"></input>

                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="row mb-4">
                            <div class="col-sm">
                                <div class="form-outline">
                                    <p>Name</p>
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-outline">
                                    <input asp-for="Name" type="text" value="@Model.Name" id="setName" class="form-control border" />
                                    <label asp-for="Name" hidden="hidden" class="form-label" for="setName"></label>
                                </div>
                            </div>
                        </div>

                        <span asp-validation-for="Surname" class="text-danger"></span>
                        <div class="row">
                            <div class="col-sm">
                                <div class="form-outline">
                                    <p>Surname</p>
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-outline mb-4">
                                    <input asp-for="Surname" type="text" value="@Model.Surname" id="setSurname" class="form-control border" />
                                    <label asp-for="Surname" hidden="hidden" class="form-label" for="setSurname"></label>
                                </div>
                            </div>
                        </div>

                        <span asp-validation-for="Image" class="text-danger"></span>
                        <div class="row mb-4">
                            <div class="col-sm">
                                <div class="form-outline">
                                    <p>Image</p>
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-outline mb-4">
                                    <input asp-for="Image" value="@Model.Image" type="file" id="setImage" class="form-control border" />
                                    <label asp-for="Image" hidden="hidden" class="form-label" for="setImage"></label>
                                </div>
                            </div>
                        </div>


                        <button type="submit" class="btn btn-success">Confirm</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}